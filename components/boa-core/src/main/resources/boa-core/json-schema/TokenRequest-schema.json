{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "http://boa.architecture-first.com/json-schema/TokenRequest",
  "title": "TokenRequest",
  "description": "Represents a request for an access token",
  "type": "object",
  "implements": "AccessRequest",
  "properties": {
    "header": {
      "$ref": "http://boa.architecture-first.com/schema/boa-common-header"
    },
    "payload": {
      "description": "Particular data used as part of the phrase",
      "type": "object",
      "properties": {
        "token": {
          "description": "Token object",
          "type": "object",
          "classType": "com.architecture.first.framework.security.model.Token"
        }
      }
    },
    "required": [
      "payload.token"
    ]
  }
}